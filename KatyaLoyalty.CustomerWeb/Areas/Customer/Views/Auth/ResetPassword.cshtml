@model KatyaLoyalty.CustomerWeb.Areas.Customer.Views.Auth.ResetPasswordModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="py-5">
    <div class="display-wrapper display-wrapper-400 ">
        <div class="card-vertical border-x-0 border-y-0 border-x-sm-1 border-y-sm-1 mb-3">
            <div class="body">
                <div class="mb-4">
                    <h1 class="text-center mb-0">Katya</h1>
                </div>
                <form>
                    <input id="identifier" type="hidden" value="@Model.Identifier" />
                    <input id="token" type="hidden" value="@Model.Token" />
                    <div class="form-group">
                        <input id="password" class="form-control" placeholder="New Password" />
                    </div>
                    <div class="form-group">
                        <input id="passwordConfirmation" class="form-control" placeholder="Confirm Password" />
                    </div>
                    <div>
                        <button class="btn btn-block btn-outline-dark rounded-pill text-bold">Reset</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="card-vertical border-x-0 border-y-0 border-x-sm-1 border-y-sm-1 mb-3">
            <div class="body">
                <div class="text-center text-secondary">
                    I have an account. <a href="/customer/auth/login" class="text-bold text-decoration-none">Log in</a>
                </div>
            </div>
        </div>
        <div class="card-vertical border-x-0 border-y-0 border-x-sm-1 border-y-sm-1 mb-3">
            <div class="body">
                <div class="text-center text-secondary">
                    I don't have an account. <a href="/customer/auth/register" class="text-bold text-decoration-none">Register</a>
                </div>
            </div>
        </div>
        <div class="card-vertical d-none d-sm-none d-md-block d-lg-block">
            <div class="body text-center">
                <a href="/" class="btn btn-sm btn-outline-secondary rounded-pill"><i class="fa fa-arrow-left"></i> Go to home page</a>
            </div>
        </div>
    </div>
</div>